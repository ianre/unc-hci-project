{
  "name": "Security Information Panel",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Displays certificate, privacy, and security information in the side panel.",
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "128": "images/chrome-extension.png",
    "16": "images/chrome-extension.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage",
    "tabs",
    "cookies",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["api-monitor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["banner.js"],
      "css": ["banner.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["banner.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
